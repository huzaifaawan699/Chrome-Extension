{
  "manifest_version": 3,
  "name": "Screen Recorder with Real-Time Transcription",
  "version": "1.0",
  "description": "Record your screen and transcribe audio in real-time.",
  "permissions": ["tabs", "storage", "activeTab", "videoCapture", "microphone"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*/*"
  ]
}
